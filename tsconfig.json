{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitUseStrict": false,
    "removeComments": true,
    "noLib": false,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": ["node_modules/@types"],
    "outDir": "dist",
    "allowJs": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "tsconfig-paths-dist.js",
    "src/test/"
  ]
}
