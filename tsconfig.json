{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitUseStrict": false,
    "removeComments": true,
    "noLib": false,
    "lib": [
      "es2017",
      "dom",
      "esnext.asynciterable"
    ],
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist",
    "allowJs": true,
    "paths": {
      "@domain": ["./domain/"],
      "@domain/*": ["./domain/*"],
      "@api": ["./api/"],
      "@api/*": ["./api/*"],
      "@core": ["./core/"],
      "@core/*": ["./core/*"],
      "@data": ["./data/"],
      "@data/*": ["./data/*"],
      "@presentation": ["./presentation/"],
      "@presentation/*": ["./presentation/*"],
      "@test": ["./test/"],
      "@test/*": ["./test/*"],
      "@schema": ["./api/graphql/graphql-schema/"],
      "@schema/*": ["./api/graphql/graphql-schema/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "tsconfig-paths-dist.js"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
