{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitUseStrict": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "noLib": false,
    "lib": [
      "es2021",
      "dom",
      "esnext.asynciterable"
    ],
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist",
    "allowJs": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "tsconfig-paths-dist.js"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
